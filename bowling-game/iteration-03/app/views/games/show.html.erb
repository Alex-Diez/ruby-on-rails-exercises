<h1>Game</h1>

<strong>Player: <%= @game.player %></strong>
<strong>Score: <%= @game.score %></strong>

<%= form_with scope: :game, method: :put, url: game_path, local: true do |form| %>
  <p>
    <%= form.label :pin %>
    <%= form.text_field :pin %>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>
