<h1>Game</h1>


<p>
  <strong>
    <%= @game.player %>
  </strong>
</p>
<p>
  <strong>Score: </strong><%= @game.score %>
</p>

<%= form_with scope: :game, url: game_path, method: :put, local: true do |form| %>
  <p>
    <%= form.label :pin %>
    <%= form.text_field :pin %>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>
